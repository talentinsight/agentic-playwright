{
  "name": "agentic-playwright",
  "version": "1.0.0",
  "description": "Agentic Playwright testing framework with RAG-powered requirements mining and automated PR workflows",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "agentic": "ts-node src/cli/index.ts run",
    "qa": "ts-node src/cli/index.ts qa-only",
    "sdet": "ts-node src/cli/index.ts sdet-only",
    "index-docs": "ts-node scripts/index-docs.ts",
    "test": "playwright test",
    "test:ci": "playwright test --project=chromium",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "trace:open": "playwright show-report",
    "codegen": "playwright codegen",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\""
  },
  "keywords": [
    "playwright",
    "testing",
    "e2e",
    "agentic",
    "rag",
    "ai",
    "automation",
    "mcp"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@playwright/test": "^1.49.0",
    "playwright": "^1.49.0",
    "typescript": "^5.7.2",
    "@types/node": "^22.10.1",
    "dotenv": "^16.4.5",
    "zod": "^3.23.8",
    "axios": "^1.7.9",
    "chromadb": "^1.9.2",
    "openai": "^4.77.0",
    "commander": "^12.1.0",
    "winston": "^3.17.0",
    "pdf-parse": "^1.1.1",
    "marked": "^15.0.4",
    "cheerio": "^1.0.0",
    "axe-core": "^4.10.2",
    "@axe-core/playwright": "^4.10.0",
    "@modelcontextprotocol/sdk": "^0.5.0"
  },
  "devDependencies": {
    "ts-node": "^10.9.2",
    "@types/pdf-parse": "^1.1.4",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "prettier": "^3.4.2",
    "vitest": "^2.1.8",
    "@vitest/ui": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

